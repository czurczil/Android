<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.czurczak.Biblioteka">

    <application
        android:allowBackup="true"
        android:icon="@drawable/open_book"
        android:label="Biblioteka"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.czurczak.Biblioteka.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.czurczak.Biblioteka.ShowAuthors"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.czurczak.Biblioteka.MainActivity" />
        </activity>
        <activity android:name="com.example.czurczak.Biblioteka.ShowAuthorsDetails"
            android:parentActivityName=".ShowAuthors">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.czurczak.Biblioteka.MainActivity" />
        </activity>
        <activity android:name="com.example.czurczak.Biblioteka.ShowBooks"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.czurczak.Biblioteka.MainActivity" />
        </activity>
        <activity android:name="com.example.czurczak.Biblioteka.AddBook"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.czurczak.Biblioteka.MainActivity" />
        </activity>
        <activity android:name="com.example.czurczak.Biblioteka.Search"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.czurczak.Biblioteka.MainActivity" />
        </activity>
        <activity android:name="com.example.czurczak.Biblioteka.AddAuthor"
            android:parentActivityName=".AddBook">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.czurczak.Biblioteka.MainActivity" />
        </activity>
    </application>

</manifest>