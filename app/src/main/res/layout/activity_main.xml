<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.czurczak.Biblioteka.MainActivity"
    android:background="@color/abc_input_method_navigation_guard"
    android:id="@+id/drawer_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokaż wszystkie książki"
            android:id="@+id/button"
            android:singleLine="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:minHeight="65dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokaż wszystkich autorów"
            android:id="@+id/button4"
            android:layout_below="@+id/button"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button"
            android:layout_alignEnd="@+id/button"
            android:minHeight="65dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dodaj nową"
            android:id="@+id/button2"
            android:layout_below="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/button4"
            android:layout_alignEnd="@+id/button4"
            android:minHeight="65dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:textColor="@android:color/background_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Szukaj"
            android:id="@+id/button3"
            android:layout_below="@+id/button2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:elevation="0dp"
            android:minHeight="65dp"
            android:background="@android:drawable/dialog_holo_dark_frame"
            android:textColor="@android:color/background_light" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#282828"
        app:menu="@menu/navigation_menu"
        app:itemTextColor="@android:color/background_light"
        app:theme="@style/NavigationDrawerStyle"
        app:itemIconTint="@android:color/background_light">
    </android.support.design.widget.NavigationView>



</android.support.v4.widget.DrawerLayout>
