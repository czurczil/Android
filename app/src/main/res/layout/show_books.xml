<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:onClick="onClickBooks"
    android:clickable="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/grey_bar"
            android:layout_gravity="center">
            <ImageView
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imgCover"
                android:layout_gravity="center"
                android:layout_marginStart="12dp"
                android:layout_width="120dp"
                android:layout_height="180dp"
                android:adjustViewBounds="false"
                android:padding="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:layout_width="100dp"
                    android:id="@+id/book_icons">

                    <ImageView
                        app:srcCompat="@drawable/ic_assignment_white_48dp_off"
                        android:id="@+id/imageToRead"
                        android:layout_weight="1"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <ImageView
                        app:srcCompat="@drawable/ic_storage_white_48dp_off"
                        android:id="@+id/imageRead"
                        android:layout_weight="1"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />

                    <ImageView
                        app:srcCompat="@drawable/ic_favorite_white_48dp_off"
                        android:id="@+id/imageFav"
                        android:layout_weight="1"
                        android:layout_width="20dp"
                        android:layout_height="20dp" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvTitle"
                    android:textColor="@android:color/background_light"
                    android:text="Tytuł"
                    android:textSize="25sp"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:textStyle="normal|bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAuthor"
                    android:textColor="@android:color/background_light"
                    android:text="Imię i nazwisko"
                    android:textAlignment="textStart"
                    android:textSize="18sp"
                    android:layout_weight="1"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>
</LinearLayout>
